<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="defaults" namespace="/" extends="struts-default">
		<action name="*_*" class="com.ob.action.{1}Action"
			method="{2}">
            <!-- 信用卡挂失  -->
			<result>/cdloss/cdloss.jsp</result>
			<result name="showCreditCardLoss">/cdloss/showCreditCard.jsp</result>
			<result name="selectOkLoss">/cdloss/confirmPassword.jsp</result>
			<result name="confirmFailedLoss">/cdloss/confirmPassword.jsp</result>
			<result name="confirmSuccessLoss">/cdloss/lossSuccess.jsp</result>
			
			<!-- 信用卡激活   -->
			<result name="showCreditCardActive">/cdActive/showCreditCard.jsp</result>
			<result name="selectOkActive">/cdActive/confirmPassword.jsp</result>
			<result name="confirmFailedActive">/cdActive/confirmPassword.jsp</result>
			<result name="confirmSuccessActive">/cdActive/activeSuccess.jsp</result>
			
			<!-- 信用卡积分显示  -->
			<result name="showCreditCardIntegration">/cdIntegration/showCreditCard.jsp</result>
			<result name="selectOkIntegration">/cdIntegration/showIntegration.jsp</result>
			
			<!-- 信用卡额度查询   -->
			<result name="showCreditCardSearchLimit">/cdLimit/showCreditCardSearch.jsp</result>
			<result name="selectOkLimit">/cdLimit/showLimit.jsp</result>
			
			<!-- 信用卡额度设置   -->
			<result name="showCreditCardSetLimit">/cdLimit/showCreditCardSet.jsp</result>
			<result name="selectOkLimitSet">/cdLimit/confirmPassword.jsp</result>
			<result name="confirmFailedLimit">/cdLimit/confirmPassword.jsp</result>
			<result name="confirmSuccessLimit">/cdLimit/showLimit.jsp</result>
			
			
		</action>
	</package>
</struts>    
